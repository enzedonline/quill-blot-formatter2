{
  "name": "@enzedonline/quill-blot-formatter2",
  "version": "2.2.3",
  "description": "An update for quill-blot-formatter to make quilljs v2 compatible.",
  "main": "./dist/index.js",
  "umd:main": "./dist/index.umd.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    "types": "./dist/index.d.ts",
    "require": "./dist/index.js",
    "default": "./dist/index.modern.mjs"
  },
  "homepage": "https://github.com/enzedonline/quill-blot-formatter2",
  "bugs": {
    "url": "https://github.com/enzedonline/quill-blot-formatter2/issues"
  },
  "contributors": [
    {
      "name": "Richard Allen",
      "email": "enzedonline@users.noreply.github.com",
      "url": "https://github.com/enzedonline"
    }
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/enzedonline/quill-blot-formatter2"
  },
  "files": [
    "dist"
  ],
  "keywords": [
    "quill",
    "blot",
    "image",
    "resize"
  ],
  "license": "Apache-2.0",
  "dependencies": {
    "deepmerge": "^4.3.1"
  },
  "devDependencies": {
    "cpy-cli": "^5.0.0",
    "microbundle": "^0.15.1",
    "quill": "^2.0.2",
    "rimraf": "^6.0.1",
    "terser-webpack-plugin": "^5.3.10",
    "typescript": "^5.6.2"
  },
  "scripts": {
    "clean": "rimraf dist",
    "prebuild": "npm run clean",
    "postbuild": "cpy ./src/css/quill-blot-formatter2.css ./dist/css --flat",
    "build": "npm run build:package && npm run build:minified",
    "build:package": "microbundle --name QuillBlotFormatter2 --compress false --external \"quill,parchment\"",
    "build:minified": "microbundle --external \"quill,parchment\" --name QuillBlotFormatter2 --format umd --output dist/js --sourcemap false",
    "prepublishOnly": "npm run build"
  }
}
